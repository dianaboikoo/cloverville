<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

    <left>
        <ListView fx:id="listView" prefWidth="200" />
    </left>

    <right>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label text="Name:" />
            <TextField fx:id="nameField" />

            <HBox spacing="10">
                <Button onAction="#handleAdd" text="Add" />
                <Button onAction="#handleDelete" text="Delete" />
            </HBox>

            <Button onAction="#handleEdit" text="Edit Selected" />
            <Button onAction="#handleGoToCompleteTask" text="Complete Task" />
            <Button onAction="#handleGoToTaskPage" text="Manage Tasks" />
            <Button onAction="#handleExport" text="Export Data" />


        </VBox>
    </right>
</BorderPane>
